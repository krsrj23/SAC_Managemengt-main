<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Room Details</title>
    <style>
      /* Import Google Font */
      @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap');

      /* Reset default styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
      }

      h1 {
        text-align: center;
        margin-bottom: 30px;
        color: #333;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
      }

      th,
      td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #4CAF50;
        color: #fff;
        font-weight: 700;
        text-transform: uppercase;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      tr:hover {
        background-color: #e0e0e0;
      }

      button {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #218838;
      }

      button:active {
        transform: translateY(2px);
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
      }
    </style>
  </head>
  <body>
    <h1>Room Details</h1>
    <table>
      <thead>
        <tr>
          <th>Room Name</th>
          <th>Start Date</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Status</th>
          <% if (rooms.some(room => room.status === 'pending')) { %>
          <th>Action</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% rooms.forEach(function(room) { %>
        <tr>
          <td><%= room.name %></td>
          <td><%= formatDate(room.start_time) %></td>
          <td><%= formatTime(room.start_time) %></td>
          <td><%= formatTime(room.end_time) %></td>
          <td><%= room.status %></td>
          <% if (room.status === 'pending') { %>
          <td>
            <form action="/approve/<%= roomId %>" method="POST">
              <input type="hidden" name="a_id" value="<%= room.a_id %>" />
              <input type="hidden" name="r_id" value="<%= room.r_id %>" />
              <input
                type="hidden"
                name="start_time"
                value="<%= room.start_time %>"
              />
              <input
                type="hidden"
                name="end_time"
                value="<%= room.end_time %>"
              />
              <button type="submit">Approve</button>
            </form>
          </td>
          <% } else { %>
          <td></td>
          <% } %>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% function formatTime(dateTimeString) { const date = new
    Date(dateTimeString); const hours = date.getHours(); const minutes =
    date.getMinutes(); const ampm = hours >= 12 ? 'PM' : 'AM'; const
    formattedTime = hours % 12 + ':' + (minutes < 10 ? '0' : '') + minutes + ' '
    + ampm; return formattedTime; } function formatDate(dateTimeString) { const
    date = new Date(dateTimeString); const options = { year: 'numeric', month:
    'short', day: 'numeric' }; return date.toLocaleDateString('en-US', options);
    } %>
  </body>
</html>